<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Calender',calender_index_path %></li>
    <li><%= link_to 'Event Details',view_events_calender_index_path %></li>
    <li>Batch and Department details</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<hr>
<div class="row">
  <div class="box col-md-12">
  	<div class="box-inner">
    	<div class="box-header well">
      	<h2>Batch List</h2>
    	</div>
  		<div class="box-content" style="overflow-y: scroll; height:auto">
  			<% if @batches.empty? %>
 					<h4 align="center">No Record Found </h4>
   			<% else %>
      		<table class="table table-striped table-bordered responsive">
        		<thead>
       				<tr>
        				<th>Sr. No.</th>
        				<th>Batch</th>
      				</tr>
    				</thead>
  					<tbody>  
      				<% @batches.each_with_index do |batch,i| %>
        				<tr>
          				<td><%= i+1 %></td>
          				<td><%= batch.name %></td>
        				</tr>      
     					 <% end %>     
   					</tbody>
      		</table>
      	<% end %>
    	</div>
  	</div>
  </div>
</div>


<hr>
<div class="row">
  <div class="box col-md-12">
  	<div class="box-inner">
    	<div class="box-header well">
      	<h2>Department List</h2>
    	</div>
  		<div class="box-content" style="overflow-y: scroll; height:auto">
  			<% if @departments.empty? %>
 					<h4 align="center">No Record Found </h4>
   			<% else %>
      		<table class="table table-striped table-bordered responsive">
        		<thead>
       				<tr>
        				<th>Sr. No.</th>
       					<th>Department</th>
      				</tr>
    				</thead>
  					<tbody>  
      				<% @departments.each_with_index do |department,i| %>
        				<tr>
          				<td><%= i+1 %></td>
          				<td><%= department.name %></td>
        				</tr>      
      				<% end %>     
   					</tbody>
      		</table>
      	<% end %>
      </div>
    </div>
  </div>
</div>
