<div class="row">
  <div class="box col-md-12">
	  <div class="box-inner">
	    <div class="box-header well">
	      <h2>Transaction Details</h2>
	    </div>
	    <div class="box-content">
		    <% unless  @automatic_transactions.empty?%>
		      <table id="datatable" class="table table-striped table-bordered responsive">
		        <thead>
		          <tr>
		            <th>Title</th>
								<th>Description</th>
								<th>Created At</th>
								<th>Action</th>
		          </tr>
		        </thead>
		        <tbody>
		        <%  @automatic_transactions.each do |a|%>
		          <tr>
		            <td class="col-3"><%= a.title%></td>
								<td class="col-3"><%= a.description%></td>
								<td class="col-3"><%= a.created_at.to_date%></td>
		            <td class="center">
		              <div class="label-success label label-default">
		              <i class="glyphicon glyphicon-edit icon-white"></i> 
		              <%= link_to 'Edit', edit_automatic_transaction_finance_path(a),class: 'a-action',remote:true %>
		              </div>
		              <div class="label-danger label label-default">
		              <i class="glyphicon glyphicon-trash icon-white"></i> 
		              <%= link_to 'Delete' ,delete_automatic_transaction_finance_path(a),method: :delete, data:{confirm:"Are You sure to delete Asset '#{a.title}'?"},class: 'a-action' %>
		              </div>
		            </td>
		          </tr>
		        <% end %>
		        </tbody>
		      </table>
		    <%else%>
					<center><h5>No transactions found</h5></center>
				<%end%>
	    </div>
	  </div>
  </div>
</div>